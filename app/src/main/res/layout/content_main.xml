<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="andrewjsauer.sauer15.MainActivity"
    tools:showIn="@layout/activity_main">


    <ImageButton
        android:id="@+id/reset_recording"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="#00000000"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_reset_button"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/play"
        android:layout_alignStart="@+id/play"/>


    <ImageButton
        android:id="@+id/play"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="#00000000"
        android:src="@drawable/ic_play_no_circle"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/pause"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="#00000000"
        android:src="@drawable/ic_pause_no_circle"
        android:visibility="invisible"
        android:layout_alignTop="@+id/play"
        android:layout_alignLeft="@+id/play"
        android:layout_alignStart="@+id/play"/>


    <TextView
        android:id="@+id/track_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="00:00"
        android:textColor="#0E3B5E"
        android:textSize="30sp"
        tools:text="16:02"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>
